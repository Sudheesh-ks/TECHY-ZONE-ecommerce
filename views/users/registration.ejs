<script>

document.getElementById('reg-form').addEventListener('submit',(e) => {


    if(!formValidate()){
        e.preventDefault()
    }
})


    function formValidate() {
        var name = document.getElementById('name').value.trim();
        var email = document.getElementById('email').value.trim();
        var phno = document.getElementById('phno').value.trim();
        var password = document.getElementById('password').value.trim();
        var confirmPassword = document.getElementById('confirmPassword').value.trim();
        var termsChecked = document.getElementById('terms').checked;

    // Empty field validation
    if (name === "" || email === "" || phno === "" || password === "" || confirmPassword === "") {
        sweetAlert("Oops...", "All fields are required!", "error");
        return false;
    }

    // Email format validation
    var emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailPattern.test(email)) {
        sweetAlert("Invalid Email", "Please enter a valid email address.", "error");
        return false;
    }

    // Phone number validation
    if (phno.length < 10 || isNaN(phno)) {
        sweetAlert("Invalid Phone Number", "Please enter a valid phone number with at least 10 digits.", "error");
        return false;
    }

    // Password validation
    if (password.length < 6) {
        sweetAlert("Weak Password", "Password must be at least 6 characters long.", "error");
        return false;
    }

    // Password and confirm password matching
    if (password !== confirmPassword) {
        sweetAlert("Password Mismatch", "Passwords do not match. Please try again.", "error");
        return false;
    }

    // Checkbox validation
    if (!termsChecked) {
        sweetAlert("Terms and Conditions", "You must agree to the terms and policies to continue.", "error");
        return false;
    }

    // For success,if all validations are true
    sweetAlert("Good job!", "Your OTP has been send. Check your email!", "success");
    return true;

}
</script>


