document.querySelectorAll('.buy-now-button').forEach(button => {
    button.addEventListener('click', function (e) {
        e.preventDefault(); // Prevent the default action (navigation)

        const stock = parseInt(this.getAttribute('data-stock')); // Get the available stock
        const quantity = parseInt(document.getElementById('quantity').value) || 1; // Get the selected quantity, default to 1
        const isLoggedIn = this.getAttribute('data-logged-in') === "true"; // Check login status

        if (!isLoggedIn) {
            // If the user is not logged in, show a SweetAlert2 popup
            Swal.fire({
                title: "Not Logged In",
                text: "You need to log in to purchase products.",
                icon: "warning",
                confirmButtonText: "OK"
            });
        } else if (stock < quantity) {
            // If the selected quantity is greater than available stock, show a SweetAlert2 popup
            Swal.fire({
                title: "Insufficient Stock",
                text: `Only ${stock} item(s) are available in stock. Please reduce the quantity.`,
                icon: "error",
                confirmButtonText: "OK"
            });
        } else if (stock === 0) {
            // If the product is out of stock, show a SweetAlert2 popup
            Swal.fire({
                title: "Out of Stock",
                text: "This product is currently unavailable.",
                icon: "error",
                confirmButtonText: "OK"
            });
        } else {
            // Proceed to checkout if stock is sufficient and user is logged in
            window.location.href = this.href;
        }
    });
});
</script>


