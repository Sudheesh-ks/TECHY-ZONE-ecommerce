                                                     style="width: 50px; height: 50px; object-fit: cover;">
                                            </td>
                                            <td><%= item.name %></td>
                                            <td>₹<%= item.price %></td>
                                            <td><%= item.quantity %></td>
                                            <td>₹<%= item.quantity *  item.price %></td>
                                            <td><%= item.status %></td>
                                            <td class="table-actions">
                                                <% if (order.status === 'Delivered') { %>
                                                    <% if (item.returnStatus === 'Not Requested' || !item.returnStatus) { %>
                                                        <!-- Display "Request Return" button -->
                                                        <button class="btn btn-warning btn-sm return-product-btn" type="button" onclick="showProductReturnPopup('<%= order._id %>', '<%= item.productId %>')">
                                                            Request Return
                                                        </button>
                                                    <% } else { %>
                                                        <!-- Display the return status if already requested or in another state -->
                                                        <span class="text-info">Return <%= item.returnStatus %></span>
                                                    <% } %>
                                                <% } else if (order.status === 'Pending') { %>
                                                    <% if (item.status !== 'Cancelled') { %>
                                                    <form action="/product-cancel/<%= order._id %>/<%= item.productId %>" method="POST" style="display: inline;">
                                                        <button class="btn btn-danger btn-sm cancel-product-btn" type="submit">
                                                            Cancel Product
                                                        </button>
                                                    </form>
                                                    <% } else { %>
                                                        <!-- Disable the button if product status is 'Cancelled' -->
                                                        <button class="btn btn-dark btn-sm cancel-product-btn" type="button" disabled>
                                                            Cancel Product
                                                        </button>
                                                    <% } %>
                                                <% } else { %>
                                                    <button class="btn btn-dark btn-sm cancel-product-btn" type="button" disabled>
                                                        Cancel Product
                                                    </button>
                                                <% } %>
                                            </td>                                            
