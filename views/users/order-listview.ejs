<script>
document.querySelectorAll('.cancel-product-btn').forEach(button => {
    button.addEventListener('click', function (e) {
        e.preventDefault();

        const form = this.closest('form');

        Swal.fire({
            title: 'Are you sure?',
            text: "Do you really want to cancel this product?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, Cancel Product',
            cancelButtonText: 'No, Keep Product',
        }).then((result) => {
            if (result.isConfirmed) {
                console.log('Form action URL:', form.action);
                console.log('Method:', form.method);

                fetch(form.action, {
                    method: form.method,
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({}),
                })
                .then(response => {
                    console.log('Response status:', response.status);
                    return response.json();
                })
                .then(data => {
                    console.log('Data from server:', data);
                    if (data.message) {
                        Swal.fire('Success', data.message, 'success').then(() => {
                            // Optionally reload the page or update the UI dynamically
                            window.location.reload(); // Or remove the product from the UI using JS
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire('Error', 'Something went wrong', 'error');
                });
            }
        });
    });
});


function showProductReturnPopup(orderId, productId) {
    Swal.fire({
        title: 'Enter Reason for Return',
        input: 'text',
        inputPlaceholder: 'Type your reason here...',
        showCancelButton: true,
        confirmButtonText: 'Submit',
        cancelButtonText: 'Cancel',
        preConfirm: (reason) => {
            if (reason.trim() === '') {
                Swal.showValidationMessage('Please enter a reason for the return');
                return false;
            }
            return fetch(`/product-return/${orderId}/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({ reason })
            }).then(response => {
                if (!response.ok) {
                    console.error('Response status:', response.status, response.statusText);
                    return response.json().then(err => {
                        throw new Error(err.message || 'Failed to submit return request');
                    });
                }
                return response.json();
            }).then(result => {
                Swal.fire({
                    title: 'Success!',
                    text: result.message,
                    icon: 'success',
                    timer: 3000,
                    showConfirmButton: false
                });
                window.location.reload();
            }).catch(error => {
                console.error('Error details:', error);
                Swal.fire('Error', error.message, 'error');
            });
        }
    });
}

