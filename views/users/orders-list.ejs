<script>
    function showReturnPopup(orderId) {
        Swal.fire({
            title: 'Enter Reason for Return',
            input: 'text',
            inputPlaceholder: 'Type your reason here...',
            showCancelButton: true,
            confirmButtonText: 'Submit',
            cancelButtonText: 'Cancel',
            preConfirm: (reason) => {
                if (reason.trim() === '') {
                    Swal.showValidationMessage('Please enter a reason for the return');
                    return false;
                }
				return fetch(`/order-return/${orderId}`, {
    method: 'POST',
    headers: {
        'Content-Type': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
    },
    body: JSON.stringify({ reason })
	}).then(response => {
		if (!response.ok) {
			throw new Error('Failed to submit return request');
		}
		return response.json(); 
	}).then(result => {
		Swal.fire({
		title: 'Success!',
		text: result.message,
		icon: 'success',
		timer: 3000,
		showConfirmButton: false 
	});
		window.location.reload();
	}).catch(error => {
		Swal.fire('Error', error.message, 'error');
	});

				}
			});
		}


		// For Retry Payment
		

		document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.retry-payment-btn').forEach((button) => {
            button.addEventListener('click', async (e) => {
                const orderId = e.target.getAttribute('data-order-id');
                try {
                    const response = await fetch(`/retry-payment/${orderId}`, { method: 'POST' }); // Ensure method matches the controller
                    const data = await response.json();

                    if (data.success) {
                        if (!data.razorpayKey) {
                            console.error('Razorpay key is missing in the response:', data);
                            alert('Payment initialization failed.');
                            return;
                        }

                        const options = {
                            key: data.razorpayKey,
                            amount: data.amount,
                            currency: data.currency,
                            name: "TECHY ZONE",
                            description: "Retry Payment",
                            order_id: data.razorpayOrderId,
                            handler: async function (response) {
                                const verifyResponse = await fetch('/verify-payment', {
                                    method: 'POST',
                                    headers: { 'Content-Type': 'application/json' },
                                    body: JSON.stringify({
                                        paymentId: response.razorpay_payment_id,
                                        razorpayOrderId: response.razorpay_order_id,
                                        razorpaySignature: response.razorpay_signature,
                                        orderId: orderId,
                                    }),
                                });

                                const verifyResult = await verifyResponse.json();
                                if (verifyResult.success) {
                                    Swal.fire({
                                    icon: 'success',
                                    title: 'Payment Successful',
                                    text: 'Your payment was successfully processed.',
									timer: 3000,
		                            showConfirmButton: false 
                                }).then(() => {
									window.location.reload();
                                });
                                } else {
									console.error('Verification failed:', verifyResult);
									Swal.fire({
										icon: 'error',
										title: 'Payment Verification Failed',
										text: 'We could not verify your payment. Please try again.'
									});
                                }
                            },
                            prefill: {
                                name: "<%= user.name %>",
                                email: "<%= user.email %>",
                                contact: "<%= user.phone %>",
                            },
                        };

                        const razorpay = new Razorpay(options);
                        razorpay.open();
                    } else {
                        alert('Failed to initiate retry payment.');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    alert('Something went wrong.');
                }
            });
        });
    });



</script>

